<!-- navigation.html.twig -->

<!-- Burger button (desktop) -->
<div class="burger-container">
    <button class="burger-button" onclick="toggleMenu()" aria-label="Toggle menu">
        <span class="burger-line"></span>
        <span class="burger-line"></span>
        <span class="burger-line"></span>
    </button>
</div>

<!-- Menu overlay (desktop) -->
<div class="menu-overlay" id="menuOverlay">
    <div class="menu-content">
        {% for button in buttons %}
            <a href="/{{ button.route }}" class="menu-link">
                <button class="menu-item {% if button.route == currentPage %}active{% endif %}">
                    <img src="{{ button.icon }}" alt="{{ button.label }}">
                    <span>{{ button.label }}</span>
                </button>
            </a>
        {% endfor %}
    </div>
</div>

<div class="menu-backdrop" id="menuBackdrop" onclick="toggleMenu()"></div>

<!-- Footer menu (mobile) -->
<footer>
    <div class="menu-box">
        {% for button in buttons %}
            <a href="/{{ button.route }}" class="menu-link">
                <button class="menu-button {% if button.route == currentPage %}active{% endif %}">
                    <img src="{{ button.icon }}" alt="{{ button.label }}">
                </button>
            </a>
        {% endfor %}
    </div>
</footer>

<script src="{{ asset("js/toggleMenu.js") }}"></script>
